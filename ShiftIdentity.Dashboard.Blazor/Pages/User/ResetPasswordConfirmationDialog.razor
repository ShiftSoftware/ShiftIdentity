<MudDialog>
    <DialogContent>
        <MudText>Are you sure you want to randomly assign new passwords for the selected users?</MudText>
        
        <br/>
        <MudCheckBox Color="Color.Primary" Label="Send login info to the user" @bind-Value="NotifyUser"></MudCheckBox>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary">Yes</MudButton>
    </DialogActions>
</MudDialog>
@code {
    public bool NotifyUser { get; set; } = true;

    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    void Submit() => MudDialog.Close(new Tuple<bool, bool>(true, NotifyUser));
    void Cancel() => MudDialog.Cancel();
}
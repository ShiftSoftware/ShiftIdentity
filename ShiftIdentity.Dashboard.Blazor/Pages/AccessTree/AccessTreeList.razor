@layout Shared.DefaultLayout
@attribute [Authorize]
@attribute [Route($"{Constants.IdentityRoutePreifix}/{nameof(AccessTreeList)}")]
@using ShiftSoftware.ShiftIdentity.Core.DTOs.AccessTree;
@inject ShiftIdentityLocalizer Loc

<ShiftList EntitySet="@($"{Constants.IdentityRoutePreifix}AccessTree")"
           Title="@Loc["Access Tree List"]"
           T="AccessTreeDTO"
           ComponentType="typeof(AccessTreeForm)"
           Dense
           FilterPanelDefaultOpen
           DisableFilters
           EnableFilterPanel
           TypeAuthAction="ShiftIdentityActions.AccessTrees"
           EnableExport>

    <StringFilter Property="x => x.Name" Label="@Loc["Name"]" Operator="ShiftBlazor.Enums.ODataOperator.Contains" lg="12" md="12" sm="12" xs="12" />

    <PropertyColumn Property="x => x.Name" Title="@Loc["Name"]"/>
</ShiftList>
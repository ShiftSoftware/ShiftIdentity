@attribute [Authorize]
@layout Shared.DefaultLayout
@attribute [Route($"{Constants.IdentityRoutePreifix}/{nameof(AppList)}")]
@using ShiftSoftware.ShiftIdentity.Core.DTOs.App;

<ShiftList EntitySet="@($"{Constants.IdentityRoutePreifix}App")"
           Title="App List"
           T="AppDTO"
           ComponentType="typeof(AppForm)"
           Dense
           ShowIDColumn
           TypeAuthAction="ShiftIdentityActions.Apps"
           EnableExport>

    <PropertyColumn Property="x => x.DisplayName" Title="Display Name"/>
    <PropertyColumn Property="x => x.AppId" Title="App Id" />
    <PropertyColumn Property="x => x.Description" Title="Description" />
</ShiftList>
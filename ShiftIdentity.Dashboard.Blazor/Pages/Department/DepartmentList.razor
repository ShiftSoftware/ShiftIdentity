@attribute [Authorize]
@layout Shared.DefaultLayout
@attribute [Route($"{Constants.IdentityRoutePreifix}/{nameof(DepartmentList)}")]
@using ShiftSoftware.ShiftIdentity.Core.DTOs.Department;
@inject ShiftIdentityLocalizer Loc

<ShiftList EntitySet="@($"{Constants.IdentityRoutePreifix}Department")"
           Title="@Loc["Department List"]"
           T="DepartmentListDTO"
           ComponentType="typeof(DepartmentForm)"
           Dense
           EnableFilterPanel
           FilterPanelDefaultOpen
           TypeAuthAction="ShiftIdentityActions.Departments"
           EnableExport>

    <StringFilter Property="x => x.Name" Label="@Loc["Name"]" Operator="ShiftBlazor.Enums.ODataOperator.Contains" lg="6" md="6" sm="12" xs="12" />
    <StringFilter Property="x => x.IntegrationId" Label="@Loc["Integration ID"]" Operator="ShiftBlazor.Enums.ODataOperator.Contains" lg="6" md="6" sm="12" xs="12" />

    <PropertyColumn Property="x => x.Name" Title="@Loc["Name"]"/>
    <PropertyColumn Title="@Loc["Integration ID"]" Property="x => x.IntegrationId" />
</ShiftList>
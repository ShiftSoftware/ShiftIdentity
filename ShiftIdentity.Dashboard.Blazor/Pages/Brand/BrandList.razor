@attribute [Authorize]
@layout Shared.DefaultLayout
@attribute [Route($"{Constants.IdentityRoutePreifix}/{nameof(BrandList)}")]
@using ShiftSoftware.ShiftIdentity.Core.DTOs.Brand
@inject ShiftIdentityLocalizer Loc

<ShiftList EntitySet="@($"{Constants.IdentityRoutePreifix}Brand")"
           Title="@Loc["Brand List"]"
           T="BrandListDTO"
           ComponentType="typeof(BrandForm)"
           Dense
           DisableFilters
           EnableFilterPanel
           FilterPanelDefaultOpen
           TypeAuthAction="ShiftIdentityActions.Brands"
           EnableExport>

    <StringFilter Property="x => x.Name" Label="Name" Operator="ShiftBlazor.Enums.ODataOperator.Contains" lg="6" md="6" sm="12" xs="12" />
    <StringFilter Property="x => x.IntegrationId" Label="Integration ID" Operator="ShiftBlazor.Enums.ODataOperator.Contains" lg="6" md="6" sm="12" xs="12" />

    <PropertyColumn Title="@Loc["Name"]" Property="x => x.Name" />
    <PropertyColumn Title="@Loc["Integration ID"]" Property="x => x.IntegrationId" />
</ShiftList>